{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["./*"],
      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"],
      "@stores/*": ["./stores/*"],
      "@constants/*": ["./constants/*"],
    }
  },
  "exclude": [ 
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"],
}